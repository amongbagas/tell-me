# Auth
BETTER_AUTH_SECRET=Your_Secret_Here
BETTER_AUTH_URL=http://localhost:3000

# Database
DATABASE_URL=Your_Database_URL_Here

# Google OAuth
GOOGLE_CLIENT_ID=Your_Google_Client_ID_Here
GOOGLE_CLIENT_SECRET=Your_Google_Client_Secret_Here

# Resend
RESEND_API_KEY="Your_Resend_API_Key_Here"
EMAIL_SENDER_NAME="Your Sender Name Here"
EMAIL_SENDER_ADDRESS="Your Sender Email Address Here"

# WebSocket Configuration
NEXT_PUBLIC_WEBSOCKET_URL=ws://localhost:8080
WEBSOCKET_PORT=8080

# TURN Server Configuration (for NAT traversal in voice calls)
# Use your own TURN servers for production - these are free but limited
NEXT_PUBLIC_TURN_USERNAME=openrelayproject
NEXT_PUBLIC_TURN_CREDENTIAL=openrelayproject

# Example with custom TURN servers:
# NEXT_PUBLIC_TURN_USERNAME=your_turn_username
# NEXT_PUBLIC_TURN_CREDENTIAL=your_turn_password

# Note: For production, use secure WebSocket URLs:
# NEXT_PUBLIC_WEBSOCKET_URL=wss://your-domain.com:8080
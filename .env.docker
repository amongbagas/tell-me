# Docker Environment Variables
# Copy this file to .env and update the values

# Auth
BETTER_AUTH_SECRET=your-secret-key-here-please-change-this
BETTER_AUTH_URL=http://localhost:3000

# Database (Docker will use this automatically)
DATABASE_URL=postgresql://postgres:postgres@db:5432/tellme

# Google OAuth (Update these with your actual values)
GOOGLE_CLIENT_ID=your-google-client-id-here
GOOGLE_CLIENT_SECRET=your-google-client-secret-here

# Resend (Update these with your actual values)
RESEND_API_KEY=your-resend-api-key-here
EMAIL_SENDER_NAME=Tell Me
EMAIL_SENDER_ADDRESS=noreply@tellme.com

# WebSocket Configuration
NEXT_PUBLIC_WEBSOCKET_URL=ws://localhost:8080
WEBSOCKET_PORT=8080
